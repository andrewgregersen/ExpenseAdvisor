<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/add_more"
        app:layout_constraintTop_toBottomOf="storeName">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/man_entry_rec"
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:layout_gravity="center_vertical" />


    </LinearLayout>


    <Button
        android:id="@+id/Return"
        android:layout_width="197dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Submit_Man"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Submit_Man"
        android:layout_width="197dp"
        android:layout_height="47dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Submit"
        app:layout_ConstraintRight_toRightof="parent"
        app:layout_constraintBottom_toBottomOf="@+id/Return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Return" />

    <Button
        android:id="@+id/add_more"
        android:layout_width="152dp"
        android:layout_height="47dp"
        android:layout_marginLeft="136dp"
        android:layout_marginBottom="8dp"
        android:text="Add More"
        app:layout_constraintBottom_toTopOf="@+id/Submit_Man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/storeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Store Name"

        app:layout_constraintBottom_toTopOf="@id/storeName"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/storeName"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_constraintTop_toBottomOf="@+id/storeText"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintleft_toLeftOf="parent"
        tools:layout_editor_absoluteX="85dp" />


</androidx.constraintlayout.widget.ConstraintLayout>